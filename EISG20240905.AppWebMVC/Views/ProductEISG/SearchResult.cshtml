@model IEnumerable<SearchResultProductEISGDTO.ProductEISGDTO>
<div class="row" style="margin-top:10px;">
	<div class="table-responsive col-md-12">
		<table class="table table-striped table-hover table-secondary">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(item => item.NombreEISG)
					</th>
					<th>
						@Html.DisplayNameFor(item => item.DescripcionEISG)
					</th>
					<th>
						@Html.DisplayNameFor(item => item.Precio)
					</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.NombreEISG)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.DescripcionEISG)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Precio)
						</td>
						<td>
							<table>
								<td>
									@Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })

								</td>
								<td>
									@Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-info" })

								</td>
								<td>
									@Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

								</td>
							</table>

						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
